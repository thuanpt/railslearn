<header class="main-header">
  <div class="container header-content">
    <div class="logo">
      <%= link_to "ðŸš€ Myapp", root_path, class: "logo-link" %>
      <nav>
        <ul style="display: flex; gap: 20px; list-style: none; margin: 0; padding: 0;">
          <li><%= link_to "Home", root_path, style: "color: white; text-decoration: none; font-weight: 500;" %></li>
          <li><%= link_to "Articles", articles_path, style: "color: white; text-decoration: none; font-weight: 500;" %></li>
          <li><%= link_to "About", about_path, style: "color: white; text-decoration: none; font-weight: 500;" %></li>
          
          <% if logged_in? %>
            <li style="margin-left: 20px; border-left: 1px solid rgba(255,255,255,0.3); padding-left: 20px;">
              <span style="color: #e5e7eb;">Hi, <%= current_user.name %></span>
