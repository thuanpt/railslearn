          <% else %>
            <li style="margin-left: 20px; border-left: 1px solid rgba(255,255,255,0.3); padding-left: 20px;">
              <%= link_to "Login", login_path, style: "color: white; text-decoration: none; font-weight: 500;" %>
            </li>
            <li>
              <%= link_to "Sign Up", signup_path, style: "background: white; color: #1f2937; padding: 5px 15px; border-radius: 4px; text-decoration: none; font-weight: 600;" %>
            </li>
          <% end %>
        </ul>
      </nav>
