<div style="max-width: 400px; margin: 50px auto; padding: 30px; background: white; border-radius: 8px; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);">
  <h2 style="text-align: center; color: #1f2937; margin-bottom: 30px;">Sign Up</h2>

  <%= form_with(model: @user, local: true, style: "display: flex; flex-direction: column; gap: 20px;") do |form| %>
    <% if @user.errors.any? %>
      <div style="background: #fee2e2; color: #991b1b; padding: 10px; border-radius: 6px;">
        <ul style="margin: 0; padding-left: 20px;">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, style: "display: block; font-weight: 600; margin-bottom: 5px;" %>
      <%= form.text_field :name, style: "width: 100%; padding: 10px; border: 1px solid #d1d5db; border-radius: 6px;" %>
    </div>

    <div>
      <%= form.label :email, style: "display: block; font-weight: 600; margin-bottom: 5px;" %>
      <%= form.email_field :email, style: "width: 100%; padding: 10px; border: 1px solid #d1d5db; border-radius: 6px;" %>
    </div>

    <div>
      <%= form.label :password, style: "display: block; font-weight: 600; margin-bottom: 5px;" %>
      <%= form.password_field :password, style: "width: 100%; padding: 10px; border: 1px solid #d1d5db; border-radius: 6px;" %>
    </div>

    <div>
      <%= form.label :password_confirmation, style: "display: block; font-weight: 600; margin-bottom: 5px;" %>
      <%= form.password_field :password_confirmation, style: "width: 100%; padding: 10px; border: 1px solid #d1d5db; border-radius: 6px;" %>
    </div>

    <%= form.submit "Sign Up", style: "background: #2563eb; color: white; padding: 12px; border: none; border-radius: 6px; font-weight: 600; cursor: pointer;" %>
  <% end %>

  <p style="text-align: center; margin-top: 20px;">
    Already have an account? <%= link_to "Login", login_path, style: "color: #2563eb; text-decoration: none;" %>
  </p>
</div>
